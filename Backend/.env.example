# Backend environment variables (example)
# Copy to .env and fill values; never commit real secrets

# JWT signing secret
TOKEN=change-me-to-a-long-random-secret

# MongoDB Atlas connection string (mongodb+srv)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/<dbname>?retryWrites=true&w=majority&appName=<YourApp>

# Comma-separated list of allowed origins for CORS
# e.g., https://your-frontend.example,https://your-preview.netlify.app
ALLOWED_ORIGINS=

# Server port (Railway may override)
PORT=5000
